<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.MainBenhNhanActivity">

    <!-- Add paddingTop to account for status bar -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="?attr/actionBarSize"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Top Bar -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/white"
            app:layout_constraintTop_toTopOf="parent"
            app:title="Healcarus">

            <Button
                android:id="@+id/btnLogout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:backgroundTint="#F8D7DA"
                android:text="Đăng Xuất"
                android:textColor="#721C24" />
        </androidx.appcompat.widget.Toolbar>

        <!-- Main Content -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/toolbar">

            <!-- Personal Info Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cvPersonalInfo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                app:cardBackgroundColor="#F9F9F9"
                app:cardCornerRadius="10dp"
                app:cardElevation="3dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Thông tin cá nhân"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#1A1A1A" />

                    <TextView
                        android:id="@+id/tvHoTen"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Họ tên: "
                        android:textSize="14sp"
                        android:textColor="#1A1A1A" />

                    <TextView
                        android:id="@+id/tvSoDienThoai"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Số điện thoại: "
                        android:textSize="14sp"
                        android:textColor="#1A1A1A" />

                    <TextView
                        android:id="@+id/tvDiaChi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Địa chỉ: "
                        android:textSize="14sp"
                        android:textColor="#1A1A1A" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Function Grid -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_margin="16dp"
                app:cardBackgroundColor="#F9F9F9"
                app:cardCornerRadius="10dp"
                app:cardElevation="3dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cvPersonalInfo">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Chức năng"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#1A1A1A" />

                    <GridLayout
                        android:id="@+id/gridFunctions"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:columnCount="2"
                        android:rowCount="3"
                        android:padding="8dp">

                        <!-- Function 1: Đăng Ký Lịch Khám -->
                        <androidx.cardview.widget.CardView
                            android:id="@+id/cardRegisterAppointment"
                            android:layout_width="0dp"
                            android:layout_height="150dp"
                            android:layout_columnWeight="1"
                            android:layout_margin="8dp"
                            android:layout_gravity="fill"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="2dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:padding="12dp"
                                android:gravity="center">

                                <ImageView
                                    android:layout_width="64dp"
                                    android:layout_height="64dp"
                                    android:src="@drawable/ic_appointment"
                                    android:scaleType="centerInside"
                                    android:contentDescription="Đăng Ký Lịch Khám" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Đăng Ký Lịch Khám"
                                    android:textSize="14sp"
                                    android:textColor="#1A1A1A"
                                    android:textAlignment="center" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <!-- Function 2: Quản Lý Hồ Sơ Cá Nhân -->
                        <androidx.cardview.widget.CardView
                            android:id="@+id/cardManageProfile"
                            android:layout_width="0dp"
                            android:layout_height="150dp"
                            android:layout_columnWeight="1"
                            android:layout_margin="8dp"
                            android:layout_gravity="fill"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="2dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:padding="12dp"
                                android:gravity="center">

                                <ImageView
                                    android:layout_width="64dp"
                                    android:layout_height="64dp"
                                    android:src="@drawable/ic_profile"
                                    android:scaleType="centerInside"
                                    android:contentDescription="Quản Lý Hồ Sơ Cá Nhân" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Quản Lý Hồ Sơ Cá Nhân"
                                    android:textSize="14sp"
                                android:textColor="#1A1A1A"
                                android:textAlignment="center" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <!-- Function 3: Xem Bệnh Án -->
                        <androidx.cardview.widget.CardView
                            android:id="@+id/cardViewMedicalRecord"
                            android:layout_width="0dp"
                            android:layout_height="150dp"
                            android:layout_columnWeight="1"
                            android:layout_margin="8dp"
                            android:layout_gravity="fill"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="2dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:padding="12dp"
                                android:gravity="center">

                                <ImageView
                                    android:layout_width="64dp"
                                    android:layout_height="64dp"
                                    android:src="@drawable/ic_medical_record"
                                    android:scaleType="centerInside"
                                    android:contentDescription="Xem Bệnh Án" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Xem Bệnh Án"
                                    android:textSize="14sp"
                                    android:textColor="#1A1A1A"
                                    android:textAlignment="center" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <!-- Function 4: Xác Nhận Dùng Thuốc -->
                        <androidx.cardview.widget.CardView
                            android:id="@+id/cardConfirmMedication"
                            android:layout_width="0dp"
                            android:layout_height="150dp"
                            android:layout_columnWeight="1"
                            android:layout_margin="8dp"
                            android:layout_gravity="fill"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="2dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:padding="12dp"
                                android:gravity="center">

                                <ImageView
                                    android:layout_width="64dp"
                                    android:layout_height="64dp"
                                    android:src="@drawable/ic_medication"
                                    android:scaleType="centerInside"
                                    android:contentDescription="Xác Nhận Dùng Thuốc" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Xác Nhận Dùng Thuốc"
                                    android:textSize="14sp"
                                    android:textColor="#1A1A1A"
                                    android:textAlignment="center" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <!-- Function 5: Xem Hóa Đơn -->
                        <androidx.cardview.widget.CardView
                            android:id="@+id/cardViewInvoice"
                            android:layout_width="0dp"
                            android:layout_height="150dp"
                            android:layout_columnWeight="1"
                            android:layout_margin="8dp"
                            android:layout_gravity="fill"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="2dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:padding="12dp"
                                android:gravity="center">

                                <ImageView
                                    android:layout_width="64dp"
                                    android:layout_height="64dp"
                                    android:src="@drawable/ic_invoice"
                                    android:scaleType="centerInside"
                                    android:contentDescription="Xem Hóa Đơn" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Xem Hóa Đơn"
                                    android:textSize="14sp"
                                    android:textColor="#1A1A1A"
                                    android:textAlignment="center" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                    </GridLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>