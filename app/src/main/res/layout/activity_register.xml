<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:background="@drawable/bg_card"
        android:padding="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đăng Ký Tài Khoản"
            android:textSize="24sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/txtTenDangNhap"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Tên đăng nhập"
            android:background="@drawable/bg_input"
            android:paddingHorizontal="12dp"
            android:textSize="14sp"
            android:layout_marginTop="24dp"/>

        <EditText
            android:id="@+id/txtMatKhau"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Mật khẩu"
            android:inputType="textPassword"
            android:background="@drawable/bg_input"
            android:paddingHorizontal="12dp"
            android:textSize="14sp"
            android:layout_marginTop="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vai trò:"
            android:textSize="14sp"
            android:layout_marginTop="12dp" />

        <RadioGroup
            android:id="@+id/groupVaiTro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp">

            <RadioButton
                android:id="@+id/radioBenhNhan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bệnh nhân"
                android:checked="true"
                android:textSize="14sp" />

            <RadioButton
                android:id="@+id/radioBacSi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bác sĩ"
                android:layout_marginStart="24dp"
                android:textSize="14sp" />
        </RadioGroup>

        <EditText
            android:id="@+id/txtHoTen"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Họ và tên"
            android:background="@drawable/bg_input"
            android:paddingHorizontal="12dp"
            android:textSize="14sp"
            android:layout_marginTop="24dp"/>

        <EditText
            android:id="@+id/txtSoDienThoai"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Số điện thoại"
            android:inputType="phone"
            android:background="@drawable/bg_input"
            android:paddingHorizontal="12dp"
            android:textSize="14sp"
            android:layout_marginTop="8dp" />

        <EditText
            android:id="@+id/txtDiaChi"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Địa chỉ"
            android:background="@drawable/bg_input"
            android:paddingHorizontal="12dp"
            android:textSize="14sp"
            android:layout_marginTop="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginTop="24dp">

            <Button
                android:id="@+id/btnDangKy"
                android:layout_width="120dp"
                android:layout_height="48dp"
                android:text="Đăng Ký" />

            <Button
                android:id="@+id/btnQuayLai"
                android:layout_width="120dp"
                android:layout_height="48dp"
                android:text="Quay Lại"
                android:layout_marginStart="12dp" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>