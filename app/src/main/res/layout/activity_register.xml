<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:background="@drawable/bg_card"
        android:padding="24dp">

        <!-- Tiêu đề -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đăng Ký Tài Khoản"
            android:textColor="#202124"
            android:textSize="24sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif" />

        <!-- Thông tin đăng nhập -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thông tin đăng nhập"
            android:textColor="#5f6368"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="24dp" />

        <EditText
            android:id="@+id/txtTenDangNhap"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Tên đăng nhập"
            android:background="@drawable/bg_input"
            android:paddingHorizontal="12dp"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/txtMatKhau"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Mật khẩu"
            android:inputType="textPassword"
            android:background="@drawable/bg_input"
            android:paddingHorizontal="12dp"
            android:textSize="14sp"
            android:layout_marginTop="8dp" />

        <!-- Vai trò -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vai trò:"
            android:textColor="#5f6368"
            android:textSize="14sp"
            android:layout_marginTop="12dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp">

            <RadioGroup
                android:id="@+id/groupVaiTro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/radioBenhNhan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bệnh nhân"
                    android:textColor="#202124"
                    android:checked="true"
                    android:textSize="14sp" />

                <RadioButton
                    android:id="@+id/radioNhanVien"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nhân viên"
                    android:textColor="#202124"
                    android:layout_marginStart="24dp"
                    android:textSize="14sp" />
            </RadioGroup>
        </LinearLayout>

        <!-- Thông tin cá nhân -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thông tin cá nhân"
            android:textColor="#5f6368"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="24dp" />

        <EditText
            android:id="@+id/txtHoTen"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Họ và tên"
            android:background="@drawable/bg_input"
            android:paddingHorizontal="12dp"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/txtSoDienThoai"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Số điện thoại"
            android:inputType="phone"
            android:background="@drawable/bg_input"
            android:paddingHorizontal="12dp"
            android:textSize="14sp"
            android:layout_marginTop="8dp" />

        <EditText
            android:id="@+id/txtDiaChi"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Địa chỉ"
            android:background="@drawable/bg_input"
            android:paddingHorizontal="12dp"
            android:textSize="14sp"
            android:layout_marginTop="8dp" />

        <!-- Nút hành động -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginTop="24dp">

            <Button
                android:id="@+id/btnDangKy"
                android:layout_width="120dp"
                android:layout_height="48dp"
                android:text="Đăng Ký"
                android:backgroundTint="#1a73e8"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:textSize="14sp" />

            <Button
                android:id="@+id/btnQuayLai"
                android:layout_width="120dp"
                android:layout_height="48dp"
                android:text="Quay Lại"
                android:textColor="#1a73e8"
                android:backgroundTint="#FFFFFF"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_marginStart="12dp"
                android:background="@drawable/bg_outline_blue" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
